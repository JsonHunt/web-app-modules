div.title Credit Card Payment

form.form-inline(ng-show="!confirmed")
	div.form-group
		input.amount.form-control(
			type='text'
			ng-model="$parent.$parent.amount"
			placeholder= "Amount $US"
		)
	button.btn.btn-primary(
		ng-click="doPay()"
	) Continue
	button.btn.btn-default(
		ng-click="cancel()"
	) Cancel
	
	div.error(ng-show="error") {{error}}

div(ng-show="confirmed")
	div.alert All done
	button.btn.btn-success(
		ng-click="close()"
	) OK
	

		
	
